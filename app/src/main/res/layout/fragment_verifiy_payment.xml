<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hacker.l.venderapp.fragments.VerifiyPaymentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="Transaction Id"
            android:textColor="@color/grey_hard"
            android:textSize="@dimen/textSize14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin5"
            android:background="@drawable/done_corner_round"
            android:hint="Enter Transaction Id"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="Transaction Amount"
            android:textColor="@color/grey_hard"
            android:textSize="@dimen/textSize14" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin5"
            android:background="@drawable/done_corner_round"
            android:hint="Enter Transaction Amount"
            android:paddingLeft="@dimen/margin10"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="Transaction Date"
            android:textColor="@color/grey_hard"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5"
            android:text="____________________________"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/dimen_120_dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin10"
            android:background="@drawable/capsule_button"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

</FrameLayout>
